<html>
   <head>
      {% block head %}
         <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
         <title>Program LosujÄ…cy - (Nie-)Totalizatora Sportowego {% block title %}{% endblock %}</title>
         <link rel="stylesheet" type="text/css" media="screen" href="style.css" />
      {% endblock %}
   </head>
   <body>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
      <script>
         var isLoginPage = document.location.pathname === '/login',
             isLogoutPage = document.location.search === '?logout';

         function goToMainPage() {
            window.location = '/';
         }

         function hideFbBtn() {
            if( isLoginPage ) {
               document.getElementById('facebook').style.display = 'none';
            }
         }

         function showFbBtn() {
            if( isLoginPage ) {
               document.getElementById('facebook').style.display = 'inline';
            }
         }

         function logoutIfNeeded() {
            if( !isLoginPage ) {
               window.location = '/logout';
            }
         }

         function statusChangeCallback(response) {
            if (response.status === 'connected' && isLogoutPage) {
               logout();
            } else if (response.status === 'connected' && isLoginPage) {
               hideFbBtn();
               login();
            } else if (response.status === 'connected' && !isLoginPage) {
               // all good - user connected
            } else if (response.status === 'not_authorized') {
               console.log('Please log into this app on Facebook or provide login and password.');
               showFbBtn();
               logoutIfNeeded();
            } else {
               console.log('Please log into Facebook or provide login and password.');
               showFbBtn();
               logoutIfNeeded();
            }
         }

         function checkLoginState() {
            FB.getLoginStatus(function(response) {
               statusChangeCallback(response);
            });
         }

         window.fbAsyncInit = function() {
            FB.init({
               appId      : '145857779110294',
               xfbml      : true,
               version    : 'v2.5'
            });

            checkLoginState();
         };

         (function(d, s, id){
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {return;}
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
         }(document, 'script', 'facebook-jssdk'));

         function login() {
            FB.api('/me', function(response) {
               $.ajax({
                  type: 'POST',
                  url: "/facebook",
                  data: "name=" + response.name + "&fid=" + response.id,
                  success: function () {
                     goToMainPage();
                  }
               });
            });
         }

         function logout() {
            FB.logout(function() {
               goToMainPage();
            });
         }
      </script>
      <div id="content">
         {% block content %}
         {% endblock %}
      </div>
   </body>
</html>
